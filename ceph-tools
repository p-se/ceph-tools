#!/usr/bin/env bash

cmake() {
    ./do_cmake.sh \
        -DENABLE_GIT_VERSION=OFF \
        -DWITH_TESTS=ON \
        -DWITH_CCACHE=ON \
        -DWITH_RADOSGW_AMQP_ENDPOINT=NO \
        -DWITH_PYTHON3=ON \
        -DWITH_PYTHON2=OFF \
        -DMGR_PYTHON_VERSION=3 \
        -DDASHBOARD_FRONTEND_LANGS=ALL \
        -DWITH_RADOSGW_KAFKA_ENDPOINT=OFF \
        -DWITH_MGR_DASHBOARD_FRONTEND=ON
}

command="$1"

if [[ "$command" == "cmake" ]]
then
    cmake
elif [[ "$command" == "clean-cmake" ]]
then
    rm -rf build/
    cmake
fi
